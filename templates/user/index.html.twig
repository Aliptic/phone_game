{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Pseudo</th>
                <th>Roles</th>
                <th>Nb_games_played</th>
                <th>Total_time_played</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.pseudo }}</td>
                
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}

                {# <td> {{ user.roles == "" ? 'Admin' : 'Utilisateur'}}</td> #}
                {% set isAdmin = false %}
                {% for role in user.roles %}
                    {% if role == "ROLE_ADMIN" %} 
                        {% set isAdmin = true %} 
                    {% endif %}
                {% endfor %}
                <td>
                    {% if isAdmin == true %}
                        <a href="{{ path('user_demote', {'id': user.id}) }}"> 
                            <img src="{{ asset('img/icon_down.png') }}" width="15" height="15" alt="Demote from administrator">
                        </a>
                        Admin 
                    {% else %} 
                        <a href="{{ path('user_promote', {'id': user.id}) }}">
                            <img src="{{ asset('img/icon_up.png') }}" width="15" height="15" alt="Promote to administrator">
                        </a>
                        Utilisateur
                    {% endif %}
                </td>
                <td>{{ user.nbGamesPlayed }}</td>
                <td>{{ user.totalTimePlayed }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
