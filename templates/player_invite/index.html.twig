{% extends 'base.html.twig' %}

{% block title %}{% trans %}The Rumor - Waiting room{% endtrans %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{% trans %}Waiting room{% endtrans %}</h1>
    {% if token %}
        <p>{% trans %}Invite your friends with this link : {% endtrans %}</p>
        <a href="{{ path('player_invite') }}.?token={{ token }}">token</a>
    {% else %}
        <p>{% trans %}Error generating token, please contact admin{% endtrans %}</p>
    {% endif %}
</div>
{% endblock %}
