{% extends 'base.html.twig' %}

{% block title %}The Rumor{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <div>
            {% trans %}You are logged in as{% endtrans %} {{ app.user.pseudo }}. <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
        </div>
        <div>
            <h1>{% trans %}Game creation{% endtrans %}</h1>
            <a href="{{ path('player_invite') }}?player={{ app.user.id }}">{% trans %}Start{% endtrans %}</a>
        </div>
    {% else %}
        <div>
            <h1>{% trans %}The Rumor{% endtrans %}</h1>
            <h2>{% trans %}Welcome to this wonderfull game{% endtrans %}</h2>
            <p>{% trans %}Lorem ipsum dolor, sit amet consectetur adipisicing elit. Facere perspiciatis repudiandae magnam nulla veniam voluptatibus.{% endtrans %}</p>
        </div>
    {% endif %}
</div>
{% endblock %}
