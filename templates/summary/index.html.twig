{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}The Rumor - Summary{% endtrans %}
{% endblock %}

{% block body %}
<style>
    * {
      box-sizing: border-box
    }

    .summary-recap {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
    }

    .tab, .tabcontent {
      height: inherit;
    }

    .tab {
      display: flex;
      flex-direction: column;
      /* float: left; */
      border: 1px solid #ccc;
      background-color: #f1f1f1;
      width: 30%;
      overflow-y: scroll;
      scrollbar-width: none;
    }

    .tab button {
      display: block;
      background-color: inherit;
      color: black;
      padding: 22px 16px;
      width: 100%;
      border: none;
      outline: none;
      text-align: left;
      cursor: pointer;
      font-size: 17px;
      border-bottom: 1px solid black;
    }

    .tab button:hover {
      background-color: #ddd;
    }

    .tab button.active {
      background-color: #ccc;
    }

    .tabcontent {
      padding: 0px 12px;
      border: 1px solid #ccc;
      width: 70%;
      overflow-y: scroll;
      border-left: none;
      display: none;
    }

    .tabcontent img {
      display: block;
      width: 300px;
      height: auto;
      margin: 0 auto;
    }
    .button {
        display: inline-block;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        color: #ffffff;
        background-color: #7aa8b7;
        border-radius: 6px;
        outline: none;
    }
    .button-grey {
      display: inline-block;
      padding: 10px 20px;
      text-align: center;
      text-decoration: none;
      color: #ffffff;
      background-color: #414D52;
      border-radius: 6px;
      outline: none;
    }
    .text-img-step {
      line-height: 30px;
      color: black;
      box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
      border: 1px solid;
      border-radius: 10px;
      padding: 7px;
      margin: 14px;
    }
    /* Clear floats after the tab */
    /* .clearfix::after {
      content: "";
      clear: both;
      display: table;
    } */
</style>

<h1>{% trans %}Summary{% endtrans %}</h1>
    
<h2>{% trans %}Game{% endtrans %} {{ game_id }}</h2>

<!-- Summary section -->
<div class="summary-recap">
    <div class="tab">
        {% for s in summaries %}
            <button class="tablinks" onmouseover="openCity(event, '{{ s[0][0] }}')">{{ s[0][0] }}</button>
        {% endfor %}
    </div>
    
    {% for s in summaries %}
    <div id="{{ s[0][0] }}" class="tabcontent">
        {% for step in s %}
            {% if step[1] starts with 'data:image/png;base64,' %}
                <div class="text-img-step">{{ step[0] }} : <img src={{ step[1] }}></div>
            {% else %}
                <div class="text-img-step">{{ step[0] }} : {{ step[1] }}</div>
            {% endif %}
        {% endfor %}
    </div>
    {% endfor %}
</div>

{% if hasVoted == 1 %}
    <h3>{% trans %}Thank you for voting!{% endtrans %}</h3>
    <a href="{{ path('index') }}">{% trans %}Start a new game{% endtrans %}</a>
{% else %}
  <!-- Voting section -->
  <div class="summary-votes">
    <h3>
      {% trans %}It's your time to vote!{% endtrans %}
      <br>
      {{ sentenceVote }}
    </h3>
    {% for id in ids %}
      {% if id[0] != myId %}
        {% if hasVoted == 0 %}
        <a class="button" href="{{ path('votefor', {'id': id[0],'gameId': game_id}) }}">
          {{ id[1] }}
        </a>
        {% else %}
          <span class="button-grey" > {{ id[1] }} </span>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
{% endif %}
<script>
    // let tabs = document.querySelectorAll('.tablinks')

    // tabs.forEach(tab => {
    //   tab.addEventListener('mouseover', (event) => {
    //     console.log(event)
    //     // openCity(event)
    //   })
    // })



    function openCity(evt, cityName) {
      let i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }

      document.getElementById(cityName).style.display = "block";
      evt.currentTarget.className += " active";
    }
    var elements = document.getElementsByClassName('tablinks');
    var requiredElement = elements[0];
    requiredElement.onmouseover();
</script>
{% endblock %}
