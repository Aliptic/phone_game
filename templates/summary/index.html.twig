{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}The Rumor - Summary{% endtrans %}
{% endblock %}

{% block body %}
<style>
    * {
      box-sizing: border-box
    }

    body {
      margin: 0;
      font-family: "Lato", sans-serif;
    }

    .summary-recap {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      height: 300px;
    }

    .tab, .tabcontent {
      height: inherit;
    }

    .tab {
      display: flex;
      flex-direction: column;
      /* float: left; */
      border: 1px solid #ccc;
      background-color: #f1f1f1;
      width: 30%;
      overflow-y: scroll;
      scrollbar-width: none;
    }

    .tab button {
      display: block;
      background-color: inherit;
      color: black;
      padding: 22px 16px;
      width: 100%;
      border: none;
      outline: none;
      text-align: left;
      cursor: pointer;
      font-size: 17px;
      border-bottom: 1px solid black;
    }

    .tab button:hover {
      background-color: #ddd;
    }

    .tab button.active {
      background-color: #ccc;
    }

    .tabcontent {
      padding: 0px 12px;
      border: 1px solid #ccc;
      width: 70%;
      overflow-y: scroll;
      border-left: none;
      display: none;
    }

    .tabcontent img {
      display: block;
      width: 300px;
      height: auto;
      margin: 0 auto;
    }

    /* Clear floats after the tab */
    /* .clearfix::after {
      content: "";
      clear: both;
      display: table;
    } */
</style>

<h1>{% trans %}Summary{% endtrans %}</h1>
    
<h2>{% trans %}Game{% endtrans %} {{ game_id }}</h2>

<div class="summary-recap">
    <div class="tab">
        {% for s in summaries %}
            <button class="tablinks" onmouseover="openCity(event, '{{ s['pseudo'] }}')">{{ s['pseudo'] }}</button>
        {% endfor %}
    </div>
    
    {% for s in summaries %}
        <div id="{{ s['pseudo'] }}" class="tabcontent">
            {% for step in s['history'] %}
                {% if step starts with 'data:image/png;base64,' %}
                    <img src={{ step }}>
                {% else %}
                    <p>{{ step }}</p>
                {% endif %}
            {% endfor %}
        </div>
    {% endfor %}
</div>

<script>
    // let tabs = document.querySelectorAll('.tablinks')

    // tabs.forEach(tab => {
    //   tab.addEventListener('mouseover', (event) => {
    //     console.log(event)
    //     // openCity(event)
    //   })
    // })

    function openCity(evt, cityName) {
      let i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("tabcontent");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }

      document.getElementById(cityName).style.display = "block";
      evt.currentTarget.className += " active";
    }
</script>
{% endblock %}
