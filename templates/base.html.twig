<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% trans %}Welcome!{% endtrans %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <style>
        * {box-sizing: border-box;}
        body {margin: 0;}

        ul {
            list-style-type: none;
        }

        a {
            text-decoration: none;
        }

        .main-container {
            position: relative;
            min-height: 100vh;
            width: 100%;
            max-width: 100%;
        }

        .header-nav ul {
            display: flex;
            align-items: center;
        }

        .header-nav li {
            width: 25%;
            text-align: center;
        }

        .footer-nav {
            position: relative;
            width: 100%;
            background-color: darkblue;
        }

        .footer-nav ul {
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .footer-nav li {
            margin: 2rem;
        }

        .footer-nav a {
            color: white;
        }
    </style>
    <body>
        <header>
            <nav class="header-nav">
                <ul>
                    <li><a href="/">{% trans %}Home{% endtrans %}</a></li>

                    {% if app.user %}
                        <li><a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a></li>
                        <li><a href="{{ path('user_profile', {'id': app.user.id}) }}">{% trans %}Mon compte{% endtrans %}</a></li>
                    {% else %}
                        <li><a href="{{ path('app_login') }}">{% trans %}Log in{% endtrans %}</a></li>
                        <li><a href="{{ path('app_register') }}">{% trans %}Sign up{% endtrans %}</a></li>
                    {% endif %}
                        
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('user_index') }}">{% trans %}Gestion des utilisateurs{% endtrans %}</a></li>
                    {% endif %}

                    <li><a href="{{ path('rules') }}">{% trans %}Game rules{% endtrans %}</a></li>
                </ul>
            </nav>
        </header>
        <div class="main-container">
            {% block body %}{% endblock %}
        </div>
        <footer>
            <nav class="footer-nav">
                <ul>
                    <li><a href="{{ path('mentions') }}">{% trans %}Legal notice{% endtrans %}</a></li>
                    <li><a href="{{ path('team') }}">{% trans %}Our team{% endtrans %}</a></li>
                </ul>
            </nav>
        </footer>
    </body>
</html>
